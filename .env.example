# MiniLab - Çevre Değişkenleri
# Bu dosyayı kopyalayıp .env olarak kaydedin ve değerleri doldurun

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-change-this
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (Production için HTTPS kullanın)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# SSL Redirect (Production'da True olmalı)
SECURE_SSL_REDIRECT=False

# Database (Production - PostgreSQL)
DB_NAME=minilab
DB_USER=minilab_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Google Gemini API (MiniBot için)
GEMINI_API_KEY=your-gemini-api-key

# Email (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=MiniLab <noreply@minilab.com>
